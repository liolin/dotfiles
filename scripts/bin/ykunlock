#!/bin/bash
exec 1> >(logger -s -t "$(basename "$0")") 2>&1
echo "RUN"
if [ "$1" = "lock" ]; then
    echo "lock"
    #pkill -USR1 swayidle
else
    # unlock
    echo "unlock"
    if echo "" | pamtester login liolin authenticate; then
        echo "unlocking process"
        # PAM login successful
        # kill locker
        #kill -KILL $(pgrep swaylock)
        #ps aux | grep swaylock
        # turn on displays
        #SWAYSOCK=$(ls /run/user/1000/sway-ipc.*.sock) swaymsg "output * dpms on"
    fi
fi
exit 0
