#!/usr/bin/env bash

checkupdates >> /dev/null
state=$?

if [ $state -eq 1 ]; then
    notify-send --urgency=critical "Updates" "Un unknow cause of failure ocurred in checkupdates"
elif [ $state -eq 0 ]; then
    numberOfPackages=$(checkupdates | wc -l)
    notify-send --urgency=low "Updates" "Updates are available. ${numberOfPackages} Package(s)"
else
    notify-send "test" "test"
fi
