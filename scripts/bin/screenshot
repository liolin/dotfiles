#!/usr/bin/env bash

IMG_PATH=/home/liolin/Pictures/scrot/
FILE=$(date +%F-%T).png

prog="none
xdg-open"

cmd=$(rofi -dmenu <<< "$prog")
cd $IMG_PATH
scrot -s "$FILE" && notify-send -u low 'Screenshot' 'Fullscreen taken and saved'

case ${cmd%% *} in
    xdg-open)
        xdg-open "$FILE"
        ;;
    none)
        ;;
esac
