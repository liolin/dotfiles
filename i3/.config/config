bindsym $mod+shift+x exec gllock
bindsym $mod+shift+p exec systemctl poweroff


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id amixer set Capture toggle # mute mic

# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Toggel flight mode
bindsym XF86WLAN exec ~/dot/src/airplane/airplane.sh


exec_always --no-startup-id ~/dot/etc/polybar/launch.sh
#exec_always feh --bg-scale ~/dot/var/image/background.png
exec_always feh --bg-scale ~/dot/var/image/background.jpg
exec_always cd ~/Dokumente/programming/startpage && python3 -m http.server 9999 --bind 127.0.0.1
exec --no-startup-id xautolock -time 5 -locker gllock -killtime 10 -killer "systemctl suspen" -notify 30 -notifier notify-send
# exec --no-startup-id nextcloud

exec_always xmodmap ~/.keyboard_mappings 
exec_always compton --config ~/.config/compton.conf
exec setxkbmap -layout ch,us -option grp:alt_space_toggle

exec /usr/local/bin/emacs
exec $myTerm
exec vivaldi
exec thunderbird



